{
  "name": "findicloud",
  "description": "Find iCloud helps you locate the local path of iCloud Drive on macOS, Windows, and Linux.",
  "version": "0.1.1",
  "keywords": [
    "icloud",
    "icloud drive",
    "find",
    "path",
    "macos",
    "windows",
    "linux"
  ],
  "bin": {
    "findicloud": "bin/findicloud"
  },
  "types": "./dist/types/index.d.ts",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "engines": {
    "node": ">=16"
  },
  "author": "hexxspark <hexxspark@gmail.com>",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "pnpm clean && tsup",
    "clean": "del-cli dist *.tsbuildinfo",
    "test": "pnpm run jest",
    "jest": "jest --runInBand --coverage",
    "cli": "pnpm build && node dist/cli.cjs",
    "release": "release-it",
    "lint": "pnpm prettier:check && pnpm eslint",
    "lint:fix": "pnpm prettier:fix && pnpm eslint:fix",
    "eslint": "eslint",
    "eslint:fix": "pnpm eslint --fix",
    "prettier:cli": "prettier \"**/*.ts\" \"**/*.js\" \"**/*.mjs\" \"**/*.md\"",
    "prettier:check": "pnpm prettier:cli --check",
    "prettier:fix": "pnpm prettier:cli --write"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@jest/console": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.3",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-plugin": "^6.3.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "memfs": "^4.14.0",
    "prettier": "^3.3.3",
    "release-it": "^17.10.0",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "require": "./dist/*.cjs",
      "import": "./dist/*.mjs"
    }
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "packageManager": "pnpm@9.14.2+sha512.6e2baf77d06b9362294152c851c4f278ede37ab1eba3a55fda317a4a17b209f4dbb973fb250a77abc463a341fcb1f17f17cfa24091c4eb319cda0d9b84278387"
}
