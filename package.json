{
  "name": "icloudy",
  "description": "A modern CLI tool for managing your iCloud Drive files and directories",
  "version": "0.1.3",
  "keywords": [
    "icloud",
    "icloud drive",
    "find",
    "path",
    "macos",
    "windows",
    "linux",
    "sync",
    "push",
    "pull"
  ],
  "bin": {
    "icloudy": "bin/icloudy"
  },
  "types": "./dist/types/index.d.ts",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "engines": {
    "node": ">=16"
  },
  "author": "hexxspark <hexxspark@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/hexxspark/findicloud"
  },
  "bugs": {
    "url": "https://github.com/hexxspark/findicloud/issues",
    "email": "hexxspark@gmail.com"
  },
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "build:full": "pnpm clean && pnpm build",
    "clean": "del-cli dist *.tsbuildinfo",
    "test": "pnpm run jest",
    "jest": "jest --runInBand --coverage",
    "cli": "pnpm build && node dist/cli.cjs",
    "release": "release-it",
    "lint": "pnpm prettier:check && pnpm eslint",
    "lint:fix": "pnpm prettier:fix && pnpm eslint:fix",
    "eslint": "eslint",
    "eslint:fix": "pnpm eslint --fix",
    "prettier:cli": "prettier \"**/*.ts\" \"**/*.md\"",
    "prettier:check": "pnpm prettier:cli --check",
    "prettier:fix": "pnpm prettier:cli --write"
  },
  "dependencies": {
    "minimatch": "^10.0.1"
  },
  "devDependencies": {
    "@jest/console": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.9",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-eslint-plugin": "^6.4.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "memfs": "^4.17.0",
    "prettier": "^3.5.3",
    "release-it": "^18.1.2",
    "ts-jest": "^29.2.6",
    "tslib": "^2.8.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "require": "./dist/*.cjs",
      "import": "./dist/*.mjs"
    }
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "packageManager": "pnpm@10.5.2",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
